                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="//cdn.jsdelivr.net/npm/chart.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>
<script src="/js/dashboard.js"></script>

@code {
    private List<Customer> Customers { get; set; } = new();
    private List<OrderHeader> OrderHeaders { get; set; } = new();
    private List<Product> Products { get; set; } = new();
    private List<OrderDetail> OrderDetails { get; set; } = new();

    int totalcustomers;
    int unprocessedOrders;
    int ordersoutfordelivery;
    int cancelledOrders;

    int totalProducts;
    int instock;
    int lowstock;
    int outofstock;

    double salesRevenue;
    double totalCost;

    

    protected override void OnInitialized()
    {
        totalcustomers = Customers.Count;
        unprocessedOrders = OrderHeaders.Count(o => o.OrderStatus == "To Process");
        ordersoutfordelivery = OrderHeaders.Count(o => o.OrderStatus == "Deliver Order");
        cancelledOrders = OrderHeaders.Count(o => o.OrderStatus == "Cancelled");

        totalProducts = Products.Count;
        instock = Products.Count(p => p.StockQuantity > 0);
        lowstock = Products.Count(p => p.StockQuantity <= 3); //hardcoded pa yung min stock qty 
        outofstock = Products.Count(p => p.StockQuantity == 0);

        salesRevenue = OrderHeaders.Count(o => o.PaymentStatus == "Paid");
        totalCost = Products.Sum(p => p.CostPrice);
    }

