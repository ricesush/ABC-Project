@using ABC.Shared.Models
@page "/HomeIndex"

<!--hero-->
<div class="container-fluid my-5">
    <div class="container rounded-3 text-center p-4" style="background-image: url('image/cctv.png'); background-position:bottom; background-size: cover; height: 300px; position: relative;">
        <div class="overlay"></div>
        <div class="d-flex flex-column justify-content-center align-items-center" style="height: 100%; position: relative; z-index: 1;">
            <h1 class="text-light"><b>Elevate Your Tech Experience</b></h1>
            <p class="text-light">Discover. Upgrade. Secure.</p>
            <a role="button" class="btn btn-lg" style="background-color:#223442; color:white;" asp-area="CustomerArea" asp-controller="Home" asp-action="Shop">Shop Now</a>
        </div>
    </div>
</div>

<!--Categories-->
<div class="container" style="border-radius: 10px; background-color: #e3f2fd;">
    <div class="text-start p-4 mt-5">
        <h4 style="color: #223442;"><b>Shop by Category</b></h4>

        <!--Start of Cards-->
        <div class="container pt-2">
            <div class="row">
                @*
                @foreach (var category in Model.Categories)
                {
                    <div class="col-sm-3">
                        <a href="@Url.Action("Shop", "Home", new { categoryFilter = category.Id })">
                            <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none rounded-3" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">@category.Name</text>
                            </svg>
                        </a>
                    </div>
                } *@
            </div>
            <!--End of Cards-->
        </div>
    </div>
</div>

<div class="container my-4">
    <div class="text-start p-4 mt-5">
        <!-- Start of Best Seller Cards -->
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h3><b>Best Selling Items</b></h3>
                    <p>Easiest way to a secured home</p>
                    <a role="button" class="btn" style="background-color:#223442; color:white;" asp-area="CustomerArea" asp-controller="Home" asp-action="Shop">Shop now <i class="bi bi-arrow-right"></i></a>
                </div>

                <!-- Iterate over the best-selling products and display them in cards -->
                @*
                @foreach (var product in Model.BestSellingProducts.Take(3))
                {
                    <div class="col-3">
                        <div class="row p-2">
                            <div class="col-12">

                                <!--Card-->
                                <div class="card border-0 mb-3 p-3 border-top border-5 shadow rounded" width="25%">
                                    <div class="d-flex justify-content-center">
                                        <img src="@product.ImageUrl" class="card-img-top rounded" style="max-width: 200px; max-height: 200px;" />
                                    </div>

                                    <div class="card-body pb-0" style="height: 150px;">
                                        <h6 class="card-title text-dark opacity-75 text-uppercase text-center">@product.productName</h6>
                                        <!-- Add other details as needed -->
                                    </div>

                                    <div class="pl-1">
                                           <p class="text-dark text-opacity-75 text-center">
                                            Price: <span>@product.RetailPrice.ToString("c", new CultureInfo("en-PH"))</span>
                                        </p>
                                    </div>
                                    <div>
                                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                            Details
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                } *@
            </div>
        </div>
        <!-- End of Best Seller Cards -->
    </div>
</div>