@using ABC.Shared.Models
@page "/Details"

<form method="post" id="your-form-id">
    <input hidden asp-for="ProductId"/>
    <div class="card shadow border-0 mt-4">


        <div class="card-header bg-secondary bg-gradient text-light py-2">
            <div class="row">
            </div>
        </div>


        <div class="card-body">
            <div class="py-3">


                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Shop" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>


                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        @*<img src="@Model.Product.ImageUrl" class="card-img-top rounded" style="max-width: 450px; max-height: 450px;" />*@
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="row ps-2">
                            @*<h3 class="text-primary text-uppercase">@Model.Product.productName</h3>*@
                        </div>

                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Brand:
                                @*<span class="text-warning text-center">
                                    @Model.Product.Brand
                                </span>*@
                            </h6>
                        </div>


                        <div class="row ps-2">
                            @*<h6 class="text-dark text-opacity-50 ">SKU : @Model.Product.SKU</h6>*@
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                List Price:
                                @*<span class="text-warning text-center">
                                    @Model.Product.RetailPrice.ToString("c", new CultureInfo("en-PH"))
                                </span>*@
                            </h6>
                        </div>
                        
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5 mx-4">
                    <h4>Product Description</h4>
                    @*<p class="text-secondary lh-sm">@Html.Raw(@Model.Product.Description)</p>*@
                </div>
            </div>
        </div>
    </div>
</form>