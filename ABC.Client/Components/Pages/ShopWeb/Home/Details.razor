@using ABC.Shared.Models
@page "/ProductDetails"

<link href="Details.razor.css" rel="stylesheet" />

<PageTitle>ABC - @ProductName </PageTitle>

<section class="container FooterminHeight mt-3 mb-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Shop">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ProductName</li>
        </ol>
    </nav>

    <form method="post" id="your-form-id">
        <input hidden asp-for="ProductId" />
        <section class="container shadow col-12 my-3 pb-3">
            <div class="card-body">
                <div class="row p-3">
                    <!-- Product Image (on top for tablets) -->
                    <div class="col-md-12 col-lg-5 text-center order-md-last order-lg-first p-2">
                        <img src="@Product.ImageUrl" class="img-fluid" />
                    </div>

                    <!-- Product Information (on bottom for tablets) -->
                    <div class="col-md-12 col-lg-7 text-start order-md-first order-lg-last">
                        <h2>@ProductName</h2>
                        <hidden @ProductId />

                        <div class="row mt-2 mb-5">
                            <h4>
                                Php
                                <span>
                                    @Product.RetailPrice
                                </span>
                            </h4>
                        </div>
                        <div class="row col-12 col-md-4 mt-5 mb-2">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">
                                    Quantity
                                </span>
                                <input for="Quantity" type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-4 pb-1 mr-md-2">
                                <button type="submit" class="btn btn-warning bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                            <div class="col-12 col-md-4 pb-1 ml-md-2">
                                <button type="submit" class="btn btn-success bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Buy
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 row my-5 mx-auto p-3">
                    <div class="accordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                                    <strong>Product's Description</strong>
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                                <div class="accordion-body">
                                    It is shown by default, until the collapse plugin adds the appropriate classes that we use to style each element. These classes control the overall appearance, as well as the showing and hiding via CSS transitions. You can modify any of this with custom CSS or overriding our default variables. It's also worth noting that just about any HTML can go within the <code>.accordion-body</code>, though the transition does limit overflow.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</section>
